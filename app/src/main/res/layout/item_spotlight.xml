<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/item_spot_frame"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/spotlight_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



        <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/spotlight_info"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/spotlight_team_info"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="6dp"
                android:text="March 24, 2016"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="24dp"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/spotlight_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



        <View
            android:layout_gravity="bottom"
            android:background="@android:color/background_dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </FrameLayout>



    <FrameLayout
        android:visibility="gone"
        android:layout_marginLeft="-140dp"
        android:id="@+id/item_spot_frame2"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/spotlight_cover2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



        <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/spotlight_info2"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/spotlight_team_info2"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="6dp"
                android:text="March 24, 2016"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="24dp"
            android:layout_marginRight="164dp"
            android:layout_gravity="bottom|right"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/spotlight_avatar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <ImageView
            android:id="@+id/remove"
            android:layout_gravity="end"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/delete_onswipe"/>


        <View
            android:layout_gravity="bottom"
            android:background="@android:color/background_dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </FrameLayout>



</LinearLayout>



